# Sparkdock Base Ghostty Configuration
# This file provides sensible defaults loaded via config-file directive.
# Customize by editing ~/.config/ghostty/config (your overrides take precedence)
# Documentation: https://ghostty.org/docs/config

# Appearance
theme = Catppuccin Mocha
background-opacity = 0.98
window-padding-balance = true
app-notifications = no-clipboard-copy

# Fonts
font-size = 18

# Usage
quit-after-last-window-closed = true
copy-on-select = clipboard
confirm-close-surface = false
mouse-scroll-multiplier = 2

# MacOS Specific
macos-non-native-fullscreen = true
font-thicken = false

# Keybindings
keybind = ctrl+shift+n=new_window
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = shift+enter=text:\n
